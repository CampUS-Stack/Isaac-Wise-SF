<apex:page id="CongrComm_EventRegistrationClosed"
           controller="CongrComm_RegistrationClosedCtrlr"
           showHeader="false"
           sideBar="false"
           docType="html-5.0"
           standardStylesheets="false"
           applyBodyTag="true" >
    <apex:composition template="{!$Site.Template}">
        <apex:define name="body">
            <apex:form >
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12">

                            <center>
                                <h3 class="title">
                                    Registration for {!theEvent.Name} has closed. Please contact the office at 513.793.2556 to ask about a waiting list.
                                </h3>
                            </center>
                            <br/>
                            <center><h3><em>You may also contact {!theEvent.Owner.Name} at the following email: {!theEvent.Owner.Email}</em></h3></center>
                            <br/>
<!--                            <center><h2><em><a href="https://{!Event.Web_Registration_Form__c}">{!Event.Web_Registration_Form__c}</a></em></h2></center>-->

                        </div>
                    </div>
                </div>
            </apex:form>
        </apex:define>
    </apex:composition>
</apex:page>